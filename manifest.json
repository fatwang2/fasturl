{
  "manifest_version": 3,
  "name": "FastURL",
  "version": "0.0.1",
  "description": "A fast way to fetch URL content",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "activeTab",
    "notifications",
    "scripting",
    "tabs",
    "commands"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "services/scraper/*.js",
      "lib/*.js"
    ],
    "matches": ["<all_urls>"]
  }],
  "commands": {
    "fetch-url": {
      "suggested_key": {
        "default": "Alt+F",
        "mac": "Alt+F"
      },
      "description": "Fetch URL content"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 